{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2018"
    ],
    "baseUrl": "./ ",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "noStrictGenericChecks": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/main.ts", "./src/polyfills.ts"
  ]
}